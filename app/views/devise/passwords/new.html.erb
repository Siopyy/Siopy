<header>
  <% content_for :title, "Oublie de mon mot de passe - Siopy.fr" %>
</header>

<style>
  .custom-control-label::before {
    background-color: #ffffff;
  }
  .btn-info {
    background-color: #114861!important;
  }
</style>

<div class="container mt-5">
  <div class="offset-md-3 col-md-6">
    <div class="card">
      <h5 class="card-header white-text text-center py-4" style="background-color: #114861;">
        <strong>Vous avez oubliez votre mot de passe ?</strong>
      </h5>
      <div class="card-body px-lg-5 pt-0">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
          <%= devise_error_messages! %>

          <div class="mt-0 mb-3 mt-4">
            <div class="field">
              <%= f.label :email, 'Adresse mail' %><br/>
              <%= f.email_field :email, autocomplete: "email", autofocus: true, class: 'form-control' %>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Envoyez-moi les instructions de rÃ©initialisation", class: 'btn btn-info btn-block my-4' %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>




